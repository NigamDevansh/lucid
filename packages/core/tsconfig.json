{
  "exclude": [
    "./coverage",
    "./dist",
    "tests",
    "jest.config.ts",
    "./cms",
    "./node_modules",
    "./temp",
    "./.turbo",
    "clear-db.js",
    "headless.config.ts"
  ],
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "target": "ESNext",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@middleware/*": ["middleware/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@data/*": ["data/*"],
      "@db/*": ["db/*"],
      "@schemas/*": ["schemas/*"],
      "@builders/*": ["builders/*"],
      "@translations/*": ["translations/*"],
      "@root/*": ["*"]
    },
    "typeRoots": ["src/types/types/*"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
